<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addword_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="@drawable/roundcorner"
    >

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_clear_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        />

    <TextView
        android:text="Agregar definición"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/textView"

        android:layout_alignBottom="@+id/ib_close"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Palabra"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/et_new_traduction"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/et_new_word"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/et_new_word"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/et_new_traduction"
        android:layout_alignStart="@+id/et_new_traduction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Traducción"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/et_new_traduction"
        android:layout_alignBottom="@+id/et_new_traduction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#ffffff"
        android:id="@+id/et_new_context"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/et_new_traduction"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/et_new_traduction"
        android:layout_alignStart="@+id/et_new_traduction" />

    <TextView
        android:text="Uso"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        tools:text="Uso"
        android:layout_alignBaseline="@+id/et_new_context"
        android:layout_alignBottom="@+id/et_new_context"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:text="Tipo"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        tools:text="Tipo"
        android:layout_below="@+id/et_new_context"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_button_accept"
        android:textColor="#3f51b5"
        tools:text="Aceptar"
        android:background="@drawable/roundcorner_white"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="sust."
            android:ems="10"
            android:id="@+id/et_new_type"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/et_new_context"
            android:layout_alignStart="@+id/et_new_context"
            tools:text="sust." />

</RelativeLayout>